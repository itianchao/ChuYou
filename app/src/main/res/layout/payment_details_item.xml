<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/fifteen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdrawal"
            android:textColor="@color/text_black"
            android:textSize="@dimen/fifteen_thirteen"
            android:layout_marginBottom="@dimen/fifteen"
            android:id="@+id/typeTextView"
            android:layout_alignRight="@+id/moneyTextView"
            android:layout_alignEnd="@+id/moneyTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-04-20"
            android:textColor="@color/text_black"
            android:textSize="@dimen/fifteen_thirteen"
            android:id="@+id/timeTextView"
            android:gravity="left"
            android:paddingRight="@dimen/fifteen"
            android:singleLine="true"
            android:layout_alignTop="@+id/typeTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/typeTextView"
            android:layout_toStartOf="@+id/typeTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+50.00"
            android:textColor="@color/text_red"
            android:textSize="@dimen/fifteen_thirteen"
            android:id="@+id/moneyTextView"
            android:gravity="right"
            android:paddingLeft="@dimen/fifteen"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/typeTextView" />
    </RelativeLayout>
</LinearLayout>