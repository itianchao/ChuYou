<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context=".activity.circle.view.TopicDetailsActivity">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/ndian_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:id="@+id/include" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/concealRelativeLayout"
        android:layout_below="@+id/include"
        android:visibility="gone">
    <com.jueda.ndian.view.MyRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:divider="@null"
        android:listSelector="#00000000"
        android:layout_above="@+id/imageview"
        android:layout_alignParentTop="true">

    </com.jueda.ndian.view.MyRefreshListView>
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xian_gray"
        android:layout_above="@+id/commentsRelativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/commentsRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fifty"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"
        android:background="@color/white"
        >
        <EditText
            android:id="@+id/commentsEditText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/six"
            android:layout_marginTop="@dimen/six"
            android:layout_marginRight="@dimen/eighty"
            android:background="@drawable/kuang_corners_white_gray1"
            android:ems="10"
            android:hint="评论一下"
            android:paddingLeft="@dimen/ten"
            android:paddingRight="@dimen/ten"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/fifteen_thirteen" >
        </EditText>
        <Button
            android:id="@+id/ResendButton"
            android:layout_width="@dimen/seventy"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/press_button_blue_white"
            android:textColor="@color/press_blue_white_color"
            android:textSize="@dimen/fifteen_thirteen"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/six"
            android:layout_marginBottom="@dimen/six"
            android:visibility="gone"
            android:text="发送"
            />
        <RelativeLayout
            android:layout_width="@dimen/seventy"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/six"
            android:layout_marginBottom="@dimen/six"
            android:id="@+id/thumb">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dip"
                android:src="@drawable/thumb_false"
                android:layout_centerHorizontal="true"
                android:id="@+id/thumbImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:textSize="@dimen/eleven_nine"
                android:gravity="center|top"
                android:id="@+id/thumbNumber"
                android:textColor="@color/text_red"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/thumbImage" />
        </RelativeLayout>

    </RelativeLayout>
    </RelativeLayout>
    <include
        android:id="@+id/loadingInclude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/loading_item"
        android:layout_below="@+id/include"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <include
        android:id="@+id/failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/failure"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/include" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:paddingLeft="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"
        android:src="@drawable/share3"
        android:visibility="gone"
        android:layout_alignBottom="@+id/include" />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >
    </RelativeLayout>
</RelativeLayout>
