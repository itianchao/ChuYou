<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context="com.jueda.ndian.activity.HelpUserActivity">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/ndian_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/include" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fifteen">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为什么要做任务？"
                    android:textStyle="bold"
                    android:textSize="@dimen/eighteen_fifteen"
                    android:textColor="@color/text_black"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:id="@+id/textView931"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通过做任务达到帮助别人的目的。因为做任务可以产生资金，自己不用花钱就可以帮助别人。"
                    android:textSize="@dimen/fifteen_thirteen"
                    android:textColor="@color/text_black"
                    android:id="@+id/textView911"
                    android:layout_below="@+id/textView931"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fifteen">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="如何做任务？"
                    android:textStyle="bold"
                    android:textSize="@dimen/eighteen_fifteen"
                    android:textColor="@color/text_black"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:id="@+id/textView9311"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答:按照每个app任务要求完成任务。"
                    android:textSize="@dimen/fifteen_thirteen"
                    android:textColor="@color/text_black"
                    android:id="@+id/textView9111"
                    android:layout_below="@+id/textView9311"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fifteen">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱心豆的作用？"
            android:textStyle="bold"
            android:textSize="@dimen/eighteen_fifteen"
            android:textColor="@color/text_black"
            android:layout_marginBottom="@dimen/fifteen"
            android:id="@+id/textView92"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.爱心豆决定了等级的高低；\n2.爱心豆决定了个人帮助金额；\n3.爱心豆决定了奖励金额。"
            android:textSize="@dimen/fifteen_thirteen"
            android:textColor="@color/text_black"
            android:id="@+id/textView93"
            android:layout_below="@+id/textView92"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fifteen" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何增加爱心豆？"
            android:textStyle="bold"
            android:textSize="@dimen/eighteen_fifteen"
            android:textColor="@color/text_black"
            android:layout_marginBottom="@dimen/fifteen"
            android:id="@+id/textView94"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.下载并使用慈善任务里的App；\n2.邀请好友使用恩典365，好友首次使用填写邀请码。"
            android:textSize="@dimen/fifteen_thirteen"
            android:textColor="@color/text_black"
            android:id="@+id/textView95"
            android:layout_below="@+id/textView94"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fifteen" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何提升等级？"
            android:textStyle="bold"
            android:textSize="@dimen/eighteen_fifteen"
            android:textColor="@color/text_black"
            android:layout_marginBottom="@dimen/fifteen"
            android:id="@+id/textView96"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 爱心豆越多，等级也越高；"
            android:textSize="@dimen/fifteen_thirteen"
            android:textColor="@color/text_black"
            android:id="@+id/textView97"
            android:layout_below="@+id/textView96"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fifteen" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何邀请好友加圈？"
            android:textStyle="bold"
            android:textSize="@dimen/eighteen_fifteen"
            android:textColor="@color/text_black"
            android:layout_marginBottom="@dimen/fifteen"
            android:id="@+id/textView98"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.进入“圈详详情”界面，将邀请码分享给好友；\n2.好友首次使用恩典365，在“填写资料”界面输入邀请码，提交完成后会自动加入圈子。"
            android:textSize="@dimen/fifteen_thirteen"
            android:textColor="@color/text_black"
            android:id="@+id/textView99"
            android:layout_below="@+id/textView98"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fifteen" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请码在哪里填写？"
            android:textStyle="bold"
            android:textSize="@dimen/eighteen_fifteen"
            android:textColor="@color/text_black"
            android:layout_marginBottom="@dimen/fifteen"
            android:id="@+id/textView100"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.首次使用恩典365，会出现“填写资料”界面，在该界面填写邀请码。"
            android:textSize="@dimen/fifteen_thirteen"
            android:textColor="@color/text_black"
            android:id="@+id/textView101"
            android:layout_below="@+id/textView100"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>
    </ScrollView>
</RelativeLayout>
