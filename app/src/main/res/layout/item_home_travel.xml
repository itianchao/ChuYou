<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ninety"
        android:background="@drawable/press_white_gray_relative">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xian_gray"/>
        <ImageView
            android:layout_width="@dimen/one_hundred_and_twenty_five"
            android:layout_marginTop="@dimen/five"
            android:layout_marginBottom="@dimen/five"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/image" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fifteen"
            android:textSize="@dimen/fourteen_twelve"
            android:textColor="@color/text_black"
            android:maxLines="2"
            android:lineSpacingExtra="2dp"
            android:id="@+id/TitleTextView"
            android:layout_marginTop="@dimen/five"
            android:layout_alignTop="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image"
            android:layout_alignBottom="@+id/image"
            android:layout_marginBottom="@dimen/five"
            android:layout_marginRight="@dimen/fifteen">
            <TextView
                android:id="@+id/lookCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_gray"
                android:drawableLeft="@drawable/look"
                android:textSize="@dimen/eleven_nine"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:drawablePadding="@dimen/two"
                android:text="0"/>
            <TextView
                android:id="@+id/commentCount"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/eleven_nine"
                android:singleLine="true"
                android:drawablePadding="@dimen/two"
                android:drawableLeft="@drawable/comment01"
                android:text="0"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/twelve_ten"
                />
            <TextView
                android:id="@+id/money"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="right"
                android:layout_height="match_parent"
                android:textColor="@color/text_black"
                android:textSize="@dimen/eleven_nine"
                android:singleLine="true"
                android:text="0爱心豆"/>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>