<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty"
        android:background="@color/title" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:layout_marginRight="@dimen/seventy"
            android:layout_marginLeft="@dimen/seventy"
            android:paddingLeft="@dimen/six"
            android:paddingRight="@dimen/six"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eighteen_fifteen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="@dimen/fifty"
            android:layout_height="fill_parent"
            android:drawableRight="@drawable/press_image_back"
            android:paddingRight="@dimen/twenty"
            android:id="@+id/back"
            android:background="@null"/>
    </RelativeLayout>
</LinearLayout>