<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/detailsRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ninety_five"
        android:background="@drawable/press_white_gray_relative"
        >
    <com.jueda.ndian.view.RoundCornerImageView
        android:layout_width="@dimen/fifty_five"
        android:layout_height="@dimen/fifty_five"
        android:layout_margin="@dimen/fifteen"
        android:id="@+id/HeadImage"/>
            <TextView
                android:id="@+id/beanTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/imageView32"
                android:layout_alignLeft="@+id/numberTextView"
                android:layout_alignStart="@+id/numberTextView"
                android:gravity="left|bottom"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/fifteen_thirteen"
                android:layout_marginRight="@dimen/one_hundred"
                android:singleLine="true"
                android:textColor="@color/text_black"
                android:text=""
              />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/thirty_five"
            android:textSize="@dimen/ten_eight"
            android:paddingTop="@dimen/two"
            android:textColor="@color/text_gray_one"
            android:text=""
            android:layout_marginTop="@dimen/eight"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/HeadImage"
            android:id="@+id/numberTextView"
            android:layout_below="@+id/beanTextView"
            android:layout_marginRight="@dimen/one_hundred"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/thirty"
            android:text="加圈"
            android:background="@drawable/press_button_blue_white"
            android:textColor="@color/press_blue_white_color"
            android:id="@+id/addButton"
            android:textSize="@dimen/fifteen_thirteen"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginBottom="@dimen/fifteen"
            android:layout_toLeftOf="@+id/imageView32"
            android:layout_toStartOf="@+id/imageView32" />
        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fifteen"
            android:src="@drawable/index_fenlei3x" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ten"
        android:layout_below="@+id/detailsRelativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></RelativeLayout>
</RelativeLayout>