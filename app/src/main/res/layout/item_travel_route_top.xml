<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fifteen"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/title"
            android:textSize="@dimen/eighteen_fifteen"
            android:textColor="@color/text_black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/exchange"
            android:layout_alignEnd="@+id/exchange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/bean"
            android:layout_below="@+id/title"
            android:layout_marginTop="@dimen/fifteen"
            android:textColor="@color/text_black"
            android:textSize="@dimen/thirteen_eleven"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/bean"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/fifteen"
            android:layout_toRightOf="@+id/bean"
            android:id="@+id/relativeLayout12"
            android:layout_alignBottom="@+id/bean"
            android:layout_alignTop="@+id/bean">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/twelve_ten"
                android:textColor="@color/text_gray"
                android:gravity="center_vertical"
                android:text=""
                android:id="@+id/money"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingRight="@dimen/two"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:id="@+id/imageView94"
                android:layout_centerVertical="true"
                android:background="@drawable/xian_gray_one"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/money"
                android:layout_alignEnd="@+id/money" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty_five"
            android:gravity="center"
            android:layout_marginTop="@dimen/ten"
            android:textSize="@dimen/thirteen_eleven"
            android:textColor="@color/press_blue_white_color"
            android:text="立即兑换"
            android:background="@drawable/press_button_blue_white"
            android:paddingRight="@dimen/fifteen"
            android:paddingLeft="@dimen/fifteen"
            android:id="@+id/exchange"
            android:layout_below="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:id="@+id/linearLayout"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fifteen"
        android:paddingTop="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty_two"
        android:layout_marginTop="@dimen/ten"
        android:paddingLeft="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"
        android:id="@+id/textView49"
        android:background="@color/white">
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:background="@drawable/xian_black"/>
        <TextView
            android:id="@+id/commentNumberTextView"
            android:layout_width="match_parent"
            android:gravity="center|left"
            android:text="评论（0）"
            android:textSize="@dimen/twelve_ten"
            android:textColor="@color/text_black"
            android:paddingLeft="@dimen/fifteen"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xian_gray"/>
</LinearLayout>