<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context=".activity.circle.view.NewCircleActivity">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/ndian_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/include" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/include">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_and_twenty_five"
        android:background="@color/white"
        android:id="@+id/HeadImageRelativeLayout">
        <com.jueda.ndian.view.RoundCornerImageView
            android:layout_width="@dimen/sixty_five"
            android:layout_height="@dimen/sixty_five"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginBottom="@dimen/fifteen"
            android:layout_centerHorizontal="true"
            android:src="@drawable/head_circle"
            app:Round="15"
            android:id="@+id/HeadImage" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Set_the_circle_icon"
            android:id="@+id/textView53"
            android:layout_below="@+id/HeadImage"
            android:gravity="center"
            android:textSize="@dimen/fourteen_twelve"
            android:textColor="@color/text_gray_one"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_height"
            android:layout_marginTop="@dimen/ten">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height"
        android:gravity="left|center"
        android:singleLine="true"
        android:hint="@string/Circle_of"
        android:textColorHint="@color/text_gray_one"
        android:paddingLeft="@dimen/fifteen"
        android:paddingRight="@dimen/fifteen"
        android:textColor="@color/text_black"
        android:textSize="@dimen/fourteen_twelve"
        android:background="@drawable/kuang_rightangle_white"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_and_twenty_five"
            android:gravity="left|top"
            android:layout_marginTop="@dimen/ten"
            android:hint="@string/Circle_to_introduce_mandatory"
            android:textColorHint="@color/text_gray_one"
            android:padding="@dimen/fifteen"
            android:textColor="@color/text_black"
            android:textSize="@dimen/twelve_ten"
            android:background="@drawable/kuang_rightangle_white"
            android:id="@+id/ContentEditText"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fifty"
        android:text="@string/submit"
        android:textColor="@color/press_white_gray_text"
        android:textSize="@dimen/fifteen_thirteen"

        android:paddingRight="@dimen/fifteen"
        android:paddingLeft="@dimen/fifteen"
        android:gravity="center"
        android:id="@+id/submit"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
