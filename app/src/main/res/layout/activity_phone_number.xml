<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".activity.me.view.PhoneNumberActivity">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/ndian_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/include" />

    <EditText
        android:layout_marginRight="@dimen/thirty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height"
        android:inputType="phone"
        android:ems="10"
        android:background="@null"
        android:textColorHint="@color/text_gray"
        android:id="@+id/phoneNumber"
        android:hint="@string/Please_enter_a_new_mobile_phone_number"
        android:paddingLeft="@dimen/ten"
        android:paddingRight="@dimen/ten"
        android:textColor="@color/text_black"
        android:textSize="@dimen/fifteen_thirteen"
        android:layout_marginTop="@dimen/thirty"
        android:singleLine="true"
        android:layout_below="@+id/include"
        android:layout_toRightOf="@+id/imageView42"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView19"
        android:layout_below="@+id/phoneNumber"
        android:background="@drawable/xian_gray"
        android:layout_alignLeft="@+id/imageView42"
        android:layout_alignStart="@+id/imageView42"
        android:layout_alignRight="@+id/phoneNumber"
        android:layout_alignEnd="@+id/phoneNumber" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/imageView19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/thirty"
        android:layout_marginLeft="@dimen/thirty"
        android:id="@+id/linearLayout4">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_height"
        android:id="@+id/imageView48"
        android:src="@drawable/code"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_height"
            android:inputType="phone"
            android:ems="10"
            android:background="@null"
            android:id="@+id/code"
            android:hint="@string/Please_enter_the_verification_code"
            android:paddingLeft="@dimen/ten"
            android:paddingRight="@dimen/ten"
            android:textColor="@color/text_black"
            android:textSize="@dimen/fifteen_thirteen"
            android:textColorHint="@color/text_gray"
            android:singleLine="true"
            android:layout_marginRight="@dimen/eighty_five"
            android:layout_toLeftOf="@+id/get_code"
            android:layout_toRightOf="@+id/imageView48"
            android:layout_toEndOf="@+id/imageView48" />

        <Button
            android:layout_width="@dimen/seventy_five"
            android:layout_height="@dimen/thirty_five"
            android:text="@string/Get_verification_code"
            android:layout_centerVertical="true"
            android:id="@+id/get_code"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/thirteen_eleven"
            android:textColor="@color/white"
            android:background="@drawable/press_button_bule_blue"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView20"
            android:background="@drawable/xian_gray"
            android:layout_below="@+id/imageView48"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/code"
            android:layout_alignEnd="@+id/code" />

    </RelativeLayout>

    <Button
        android:layout_width="@dimen/three_hundred"
        android:layout_height="@dimen/forty"
        android:text="@string/submit"
        android:id="@+id/submit"
        android:textSize="@dimen/fifteen_thirteen"
        android:layout_marginTop="@dimen/thirty"
        android:textColor="@color/white"
        android:background="@drawable/press_button_bule_blue"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignLeft="@+id/imageView19"
        android:layout_alignStart="@+id/imageView19"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remind"
        android:textColor="@color/text_red"
        android:id="@+id/textView22"
        android:layout_marginTop="@dimen/fifteen"
        android:textSize="@dimen/eleven_nine"
        android:layout_below="@+id/submit"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignStart="@+id/submit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Next_time_can_only_be_used_to_replace_the_mobile_phone_to_log_in"
        android:id="@+id/textView23"
        android:textColor="@color/text_black"
        android:textSize="@dimen/eleven_nine"
        android:layout_alignBottom="@+id/textView22"
        android:layout_toRightOf="@+id/textView22"
        android:layout_toEndOf="@+id/textView22" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_height"
        android:id="@+id/imageView42"
        android:layout_alignTop="@+id/phoneNumber"
        android:layout_marginLeft="@dimen/thirty"
        android:layout_alignParentLeft="true"
        android:src="@drawable/phone1"
        android:layout_alignParentStart="true" />


</RelativeLayout>
