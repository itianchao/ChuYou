<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/one_hundred"
        android:layout_height="@dimen/one_hundred"
        android:id="@+id/imageView54"
        android:layout_centerVertical="true"
        android:src="@drawable/no_search"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Search_the_scene"
        android:id="@+id/textView52"
        android:gravity="center"
        android:paddingRight="@dimen/ten"
        android:textSize="@dimen/fifteen_thirteen"
        android:textColor="@color/text_black"
        android:layout_below="@+id/imageView54"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>