<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:background="@drawable/press_white_gray_relative"
        android:layout_height="@dimen/seventy_five">
        <com.jueda.ndian.view.RoundCornerImageView
            android:layout_width="@dimen/forty_five"
            android:layout_height="@dimen/forty_five"
            android:layout_margin="@dimen/fifteen"
            android:id="@+id/HeadImage" />

        <TextView
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/one_hundred"
            android:layout_height="@dimen/twenty_two"
            android:text="王氏慈善圈是是是是是是是是事实上是是是是s"
            android:id="@+id/NameTextView"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/fifteen_thirteen"
            android:layout_alignTop="@+id/HeadImage"
            android:layout_toRightOf="@+id/HeadImage"
            android:layout_toEndOf="@+id/HeadImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty_three"
            android:text="王氏家族齐做慈善"
            android:paddingRight="@dimen/fifteen"
            android:singleLine="true"
            android:gravity="center|left"
            android:layout_marginRight="@dimen/sixty"
            android:textSize="@dimen/thirteen_eleven"
            android:textColor="@color/text_gray_one"
            android:id="@+id/contentTextView"
            android:layout_alignBottom="@+id/HeadImage"
            android:layout_alignLeft="@+id/NameTextView"
            android:layout_alignStart="@+id/NameTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty_two"
            android:id="@+id/imageView45"
            android:src="@drawable/look"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginRight="@dimen/six"
            android:layout_alignTop="@+id/NameTextView"
            android:layout_toRightOf="@+id/NameTextView"
            android:layout_toEndOf="@+id/NameTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty_two"
            android:text="999"
            android:singleLine="true"
            android:layout_marginRight="@dimen/sixty"
            android:id="@+id/numberTextView"
            android:textSize="@dimen/twelve_ten"
            android:textColor="@color/text_gray_one"
            android:gravity="center"
            android:layout_alignBottom="@+id/imageView45"
            android:layout_toRightOf="@+id/imageView45"
            android:layout_toEndOf="@+id/imageView45" />



        <Button
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/thirty"
            android:layout_marginRight="@dimen/fifteen"
            android:background="@drawable/press_button_blue_white"
            android:id="@+id/add"
            android:text="加圈"
            android:textSize="@dimen/fifteen_thirteen"
            android:textColor="@color/press_blue_white_color"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/fifteen"
            android:text="@string/Has_joined"
            android:textSize="@dimen/fifteen_thirteen"
            android:textColor="@color/text_red"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/HasJoinedTextView"
            android:layout_alignParentRight="true"
             />
        <ImageView
            android:id="@+id/xian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xian_gray"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/HeadImage"
            android:layout_toEndOf="@+id/HeadImage" />
    </RelativeLayout>
</LinearLayout>