<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/lookParticulars"
    android:background="@color/background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/fourteen_twelve"
        android:maxLines="3"
        android:paddingRight="@dimen/fifteen"
        android:paddingTop="@dimen/fifteen"
        android:paddingLeft="@dimen/fifteen"
        android:background="@drawable/press_white_gray_relative"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容
        内容内容内容内容内容内容内容内容内容内容内容内容"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/imageRelativeLayout"
        android:layout_height="@dimen/one_hundred_and_ten_five"
        android:background="@drawable/press_white_gray_relative"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/fifteen"
            android:paddingLeft="@dimen/fifteen"
            android:paddingTop="@dimen/fifteen"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ContentImageView1"
                android:layout_width="0dp"
                android:layout_height="@dimen/one_hundred"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ContentImageView2"
                android:layout_width="0dp"
                android:layout_height="@dimen/one_hundred"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ContentImageView3"
                android:layout_width="0dp"
                android:layout_height="@dimen/one_hundred"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/twenty"
            android:layout_height="@dimen/twenty"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve_ten"
            android:alpha="0.7"
            android:gravity="center"
            android:layout_marginBottom="@dimen/five"
            android:layout_marginRight="@dimen/twenty"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/kuang_corners_black_two"
            android:id="@+id/numberTextView"
            android:layout_gravity="bottom"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/forty"
        android:gravity="center"
        android:paddingRight="@dimen/fifteen"
        android:paddingLeft="@dimen/fifteen"
        android:background="@drawable/press_white_gray_relative">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_toRightOf="@+id/timeTextView"
            android:layout_toLeftOf="@+id/thumbNumber"
            android:layout_toStartOf="@+id/thumbNumber">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/twenty_two"
                android:id="@+id/imageView45"
                android:src="@drawable/look"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/lookNumberTextView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/twenty_two"
                android:text="999999"
                android:id="@+id/lookNumberTextView"
                android:textSize="@dimen/ten_eight"
                android:textColor="@color/text_gray_one"
                android:layout_marginLeft="@dimen/two"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty_three"
            android:id="@+id/textView44"
            android:layout_alignBottom="@+id/HeadImage"
            android:layout_alignLeft="@+id/NameTextView"
            android:layout_alignStart="@+id/NameTextView"
            >

        </RelativeLayout>


        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1小时前"
            android:textSize="@dimen/ten_eight"
            android:layout_marginRight="@dimen/four"
            android:layout_toEndOf="@+id/NameTextView"
            android:layout_toRightOf="@+id/NameTextView"
            android:textColor="@color/text_gray_one"
            android:layout_alignParentBottom="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/eight"
                android:text="200"
                android:drawablePadding="@dimen/two"
                android:textSize="@dimen/ten_eight"
                android:textColor="@color/text_gray_one"
                android:drawableLeft="@drawable/select_like"
                android:background="@null"
                android:id="@+id/thumbNumber"
                android:button="@null"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xian_gray"/>
</LinearLayout>