<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context=".activity.me.view.NickNameActivity">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/ndian_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/include" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_height"
        android:background="@drawable/kuang_input"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/fifteen"
        android:paddingRight="@dimen/twenty_five"
        android:textSize="@dimen/fifteen_thirteen"
        android:textColor="@color/text_black"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_marginTop="@dimen/fifteen"
        android:id="@+id/editText"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fifty"
        android:paddingRight="@dimen/fifteen"
        android:paddingLeft="@dimen/fifteen"
        android:text="@string/save"
        android:id="@+id/save"
        android:background="@null"
        android:gravity="center"
        android:textSize="@dimen/fifteen_thirteen"
        android:textColor="@color/press_white_gray_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:gravity="center"
        android:layout_marginRight="@dimen/ten"
        android:id="@+id/number"
        android:textSize="@dimen/thirteen_eleven"
        android:textColor="@color/text_gray"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/editText" />
</RelativeLayout>
