<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MyRefreshListView">
        <attr name="isLoading" format="boolean"></attr>
        <attr name="isRefresh" format="boolean"></attr>
        <attr name="isShowTime" format="boolean"></attr>
    </declare-styleable>
    <!--完成进度条-->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"/>
        <attr name="textIsDisplayable" format="boolean"/>
        <attr name="text" format="string"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"/>
            <enum name="FILL" value="1"/>
        </attr>
    </declare-styleable>


    <!-- 检索栏 -->
    <declare-styleable name="SideBar">
        <attr name="Size" format="dimension"></attr>
    </declare-styleable>
    <!--滑动开关-->
    <declare-styleable name="SwitchButton">
        <attr name="isOpened" format="boolean" />
        <attr name="slide_button" format="reference" />
        <attr name="switch_background_true" format="reference" />
        <attr name="switch_background_false" format="reference"></attr>
    </declare-styleable>
    <!--图片裁剪-->
    <declare-styleable name="ClipSquareImageView">
        <attr name="ClipSquareIV_BorderDistance" format="dimension"/>
        <attr name="ClipSquareIV_BorderWidth" format="dimension"/>
        <attr name="ClipSquareIV_BorderColor" format="color"/>
        <attr name="ClipSquareIV_OutsideColor" format="color"/>
    </declare-styleable>
    <!--垂直跑马灯-->
    <declare-styleable name="VerticalSwitchTextView">
        <attr name="switchDuaration" format="integer"/>
        <attr name="idleDuaration" format="integer"/>
        <attr name="switchOrientation">
            <enum name="up"  value="0"/>
            <enum name="down"  value="1"/>
        </attr>
    </declare-styleable>
    <!--图片圆角角度-->
    <declare-styleable name="RoundCornerImageView">
        <attr name="Round" format="float"/>
    </declare-styleable>
</resources>